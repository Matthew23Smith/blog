<div class='container'>
	
	<h1>All articles</h1>
	<%= link_to "New Article", new_article_path %>
	
	<div class="row">
		<% @articles.each do |article| %>
		  <div class="col-sm-6 col-md-4">
		    <div class="thumbnail">
		    		<%= image_tag("default.png", :alt => "default") %>
		      <div class="caption">
		        <h3><%= article.title %></h3>
		       <%=  truncate(article.description, length: 70)  %>
		       <p></p> <small><%= article.user.username if article.user %>, Create: <%= time_ago_in_words(article.created_at) %>, Update: <%= time_ago_in_words(article.updated_at) %></small></p>
		        <br>
		        <p class='text-center'><%= link_to 'Edit', edit_article_path(article) %>
				<%= link_to 'Show', article_path(article) %>
				<%= link_to 'Delete', article_path(article), method: :delete, data:{confirm: "Are you sure?"} %></p>
		      </div>
		    </div>
		  </div>
		<% end %>
	</div>
	
</div>

