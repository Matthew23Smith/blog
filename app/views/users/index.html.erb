<div class='container'>
	
	<h1>All User's Using My Blog</h1>
	<div class="center">
		<%= will_paginate %>
	</div>
	<div class="row center">
		<% @users.each do |user| %>
		  <div class="col-sm-6 col-md-4">
		    <div class="thumbnail">
		    		<%= link_to gravatar_for(user), user_path(user) %>
		      <div class="caption">
		        <h3><%= user.username %></h3>
		       <p> <small><%= pluralize(user.articles.count, "article") %></small></p>
		        <br>
		        <p class='text-center'>
				<%= link_to 'Show', user_path(user) %>
					<% if signed_in? and current_user.admin? %>
					<%= link_to "Delete this user", user_path(user), method: :delete,
					data: { confirm: "Are you sure you want to delete the user and all their articles?" } %>
					<% end %></p>
		      </div>
		    </div>
		  </div>
		<% end %>
	</div>
	
	<div class="center">
		<%= will_paginate %>
	</div>
	
</div>

