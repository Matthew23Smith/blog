<div class='container'>
  <h1> All Categories</h1>

  <% @categories.each do |category| %>

    <div class='row'>
        <div class='col col-md-6 col-offset-3'>
          <h2><%= link_to " #{category.name} ", category_path(category) %></h2>
          <small><%= pluralize(category.articles.count, "article") %></small>
        </div>
    </div>

  <% end %>
  
</div>
